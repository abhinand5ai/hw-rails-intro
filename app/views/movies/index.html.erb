<h2>All Movies</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
  <tr>
    <th >
      <%= link_to 'title'.titleize , movies_path(sort: 'title'.to_sym),
                  id: 'title_header',
                  :class => ("hilite text-white" if params[:sort] && params[:sort].to_sym == 'title'.to_sym) || 'default'  %>
    </th>
    <th>Rating</th>
    <th >
      <%= link_to 'release_date'.titleize, movies_path(sort: 'release_date'.to_sym),
                  id: 'release_date_header',
                  :class => ("hilite text-white" if params[:sort] && params[:sort].to_sym == 'release_date'.to_sym) || 'default'  %>
    </th>
    <th>Rating</th>
  </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>